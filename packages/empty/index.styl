@import '../../style/var.styl';

.esc-empty {
  text-align: center;
  padding-top: 20vh;
  line-height: 1;
  &__img {
    width: 130px;
    height: 130px;
    border-radius: 50%;
  }
  &__title {
    font-weight: bold;
    font-size: 20px;
    color: black;
    margin: 30px 0 10px 0;
  }
  &__desc {
    font-size: 14px;
    color: #999999;
    margin: 0 0 20px 0;
  }
}