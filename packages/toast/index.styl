.esc-toast
  position fixed
  border-radius 4px
  overflow hidden
  padding 8px 12px
  width fit-content
  max-width 80%
  min-width 100px
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background-color rgba(0,0,0,.7)
  color #fff
  font-size 14px
  word-break break-all
  &__text
    text-align center
.fade-enter-active, .fade-leave-active
  transition: opacity .3s

.fade-enter, .fade-leave-to
  opacity: 0;
