.esc-toast
  position fixed
  border-radius 4px
  overflow hidden
  padding 5px 10px
  max-width 80%
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background-color rgba(0,0,0,.6)
  color #fff
  font-size 13px
  word-break break-all
.fade-enter-active, .fade-leave-active
  transition: opacity .3s

.fade-enter, .fade-leave-to
  opacity: 0;
